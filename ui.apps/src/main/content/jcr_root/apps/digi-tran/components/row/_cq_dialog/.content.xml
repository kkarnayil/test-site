<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Row"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[digi-tran.row]">
    <content
        granite:class="cmp-row__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                <columnlisting
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldDescription="Column Listing"
                                fieldLabel=""
                                required="{Boolean}false">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    emptyText=""
                                    name="./columnList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <columnname
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="placeholder"
                                            fieldDescription="Column Name"
                                            fieldLabel="Column Name"
                                            name="./columnname"/>
                                        <columntype
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                            class="cq-dialog-dropdown-tab-showhide"
                                            cq-dialog-dropdown-tab-showhide-target=".list-option-tab-showhide-target"
                                            fieldLabel="Column Type"
                                            name="./columntype">
                                            <items jcr:primaryType="nt:unstructured">
                                                <container0
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Select per page"
                                                    value=""/>
                                                <container1
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Text"
                                                    value="granite/ui/components/coral/foundation/form/textfield"/>
                                                <container2
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Rich Text"
                                                    value="granite/ui/components/coral/foundation/form/textarea"/>
                                                <container3
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Number"
                                                    value="granite/ui/components/coral/foundation/form/numberfield"/>
                                            </items>
                                        </columntype>
                                        <sortable
                                            jcr:primaryType="nt:unstructured"
                                            sling:orderBefore="id"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            checked="{Boolean}false"
                                            fieldDescription="Sortable"
                                            name="./sortable"
                                            text="Sortable"
                                            uncheckedValue="{Boolean}false"
                                            value="{Boolean}true"/>
                                    </items>
                                </field>
                            </columnlisting>
                    <search
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Search Keywords"
                        name="./searchkey"/>
                    <filter
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Filter Keywords"
                        name="./filterkey"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
